<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view = "http://schemas.android.com/apk/res-auto"
    android:id="@+id/invLL"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        card_view:cardBackgroundColor="@color/cardColor"
        card_view:cardCornerRadius="6dp"
        card_view:cardElevation="5dp"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/yelpImage"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_add_24"
                />


            <RelativeLayout
                android:id="@+id/ideaInfo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                >

                <TextView
                    android:id="@+id/yelpName"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="Bicycle Riding In A Park"
                    android:textColor="@color/black"
                    android:textSize="15sp" />


                <LinearLayout
                    android:layout_below="@+id/yelpName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    >


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rating: "
                            android:textSize="12sp"

                            />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/yelpRating"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="testing text"
                        android:textSize="12sp"
                        android:textColor="@color/yelp_rating"
                        />


                    <!--<ImageView-->
                        <!--android:id="@+id/googleMapIcon"-->
                        <!--android:layout_width="30dp"-->
                        <!--android:layout_height="30dp"-->
                        <!--android:layout_marginLeft="0dp"-->
                        <!--android:layout_marginRight="10dp"-->
                        <!--android:src="@drawable/google_maps"-->
                        <!--android:alpha="0.7"-->
                        <!--/>-->

                    <!--<ImageView-->
                        <!--android:id="@+id/yelpIcon"-->
                        <!--android:layout_below="@+id/dateideaTv"-->
                        <!--android:layout_width="30dp"-->
                        <!--android:layout_height="30dp"-->
                        <!--android:src="@drawable/yelp"-->
                        <!--android:alpha="0.8"-->
                        <!--/>-->

                </LinearLayout>




            </RelativeLayout>




        </LinearLayout>

    </android.support.v7.widget.CardView>





</LinearLayout>